<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".connectActivity"
    android:gravity="center">


    <EditText
        android:layout_width="@dimen/control_editbox_hori"
        android:layout_height="@dimen/control_editbox_vertical"
        android:gravity="center"
        android:hint="@string/UserName"
        android:id="@+id/edt_userName" />
    <View
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="@dimen/activity_horizontal_margin" />
    <EditText
        android:layout_width="@dimen/control_editbox_hori"
        android:layout_height="@dimen/control_editbox_vertical"
        android:gravity="center"
        android:hint="@string/UserPw"
        android:id="@+id/edt_Pw" />
    <View
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="@dimen/activity_horizontal_margin" />
    <EditText
        android:layout_width="@dimen/control_editbox_hori"
        android:layout_height="@dimen/control_editbox_vertical"
        android:gravity="center"
        android:hint="@string/UserID"
        android:id="@+id/edt_ID" />
    <View
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="@dimen/activity_horizontal_margin" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:gravity="center">
        <Button
            android:layout_width="@dimen/control_btn_hori"
            android:layout_height="@dimen/control_btn_vert"
            android:background="@mipmap/pic"
            android:text="Reg"
            android:id="@+id/btn_Init" />
        <View
            android:layout_width="64dp"
            android:layout_height="@dimen/activity_horizontal_margin" />
        <Button
            android:layout_width="@dimen/control_btn_hori"
            android:layout_height="@dimen/control_btn_vert"
            android:background="@mipmap/pic"
            android:text="Login"
            android:id="@+id/btn_login" />
    </LinearLayout>

</LinearLayout>


